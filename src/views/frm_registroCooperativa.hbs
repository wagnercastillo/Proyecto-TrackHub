{{>navigation}}

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <form action="/guardarCooperativa/add" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="nombre" class="form-control" placeholder="Ingrese Nombre Cooperativa ">
                    </div>
                    <div class="form-group">
                        <textarea name="direccion" class="form-control"
                            placeholder="Ingrese direccion Cooperativa "></textarea>
                    </div>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
                            <label for="inputGroupFile01" class="custom-file-label"> Seleccionar Logo</label>
                        </div>
                    </div>
                    <button class="btn tbn-primary"> Guardar</button>
                </form>
            </div>
        </div>
    </div>
    <col-md-8>
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Direccion</th>
                    <th>Operaciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each cooperativas}}
                <tr>
                    <td>{{nombre}}</td>
                    <td>{{direccion}}</td>
                    <td>
                        <a href="{{imageURL}}" target="_black" class="btn btn-primary">Vista</a>
                        <a class="btn btn-danger">Inabilitar</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </col-md-8>
</div>